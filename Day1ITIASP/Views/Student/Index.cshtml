<h2 class="text-center text-primary my-4">Students List</h2>

<table class="table table-bordered table-hover text-center align-middle shadow-sm">
    <thead class="table-dark">
        <tr>
           
            <th scope="col">SSN</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Address</th>
            <th scope="col">IMG</th>
            <th scope="col">Email</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var student in Model)
        {
            <tr>
               
                <td>@student.SSN</td>
                <td>@student.Name</td>
                <td>@student.Age</td>
                <td>@student.Address</td>
                <td>
                    <img src="@student.IMG" alt="Student Image" style="width: 50px; height: 50px; object-fit: cover; border-radius: 50%;" />
                </td>
                <td>@student.Email</td>
            </tr>
        }
       </tbody>
</table>
